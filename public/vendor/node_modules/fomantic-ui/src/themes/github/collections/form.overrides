/*******************************
           Overrides
*******************************/

.ui.selection.dropdown {
    background-color: #fafafa;
    box-shadow: 0 1px 2px rgb(0 0 0 / 0.075) inset;
    border-color: #ccc;
}

.ui.selection.dropdown:focus {
    box-shadow:
        0 1px 2px rgb(0 0 0 / 0.075) inset,
        0 0 5px rgb(81 167 232 / 0.5);
}
